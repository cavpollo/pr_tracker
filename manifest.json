{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension will allow users to have a quick look at their github's pull requests information.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "PR Tracker"
  },

  "background": {
    "persistent": false,
    "page": "background.html"
  },

  "permissions": [
    "alarms",
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "http://*.github.com/",
    "https://*.github.com/"
  ],

  "options_page": "options.html"
}