{
  "manifest_version": 2,

  "name": "PR Tracker",
  "description": "This extension will allow users to have a quick look at their github's pull requests information. (=')>",
  "version": "1.0.6",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "PR Tracker"
  },

  "background": {
    "persistent": false,
    "page": "background.html"
  },

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "permissions": [
    "alarms",
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "http://*.github.com/",
    "https://*.github.com/"
  ],

  "options_page": "options.html"
}